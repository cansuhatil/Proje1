import csv
import numpy as np
import pandas as pd

with open('NotBilgileri.csv', 'w', newline="") as file:
    myFile = csv.writer(file)
    
    myFile.writerow(["Ogrenci Adi Soyadi","Ogrenci Numarasi","Vize Notu","Final Notu", \
                      "Ortalama Not", "Harf Notu" , "Durum"])
 
    ogrencisayisi = int(input("Lütfen öğrenci sayısını giriniz: "))


    for i in range(ogrencisayisi):
        ogrenciadısoyadı = input("Ogrenci "+ str(i+1) +": Ogrenci Adı Soyadı giriniz: ")
        oğrencinumarası = input("Ogrenci "+ str(i+1) +": Ogrenci Numarası: ")
        vizeNotu = float(input("Ogrenci "+ str(i+1) +": Vize notu giriniz: "))
        finalNotu = float(input("Ogrenci "+ str(i+1) +": Final notu giriniz: "))
        
        ortalamaNot=(0.4*vizeNotu)+(0.6*finalNotu)
        if(vizeNotu<100 and finalNotu<100):
          print("Not ortalamanız : ",ortalamaNot)

        if ortalamaNot<100 and finalNotu>=50:
            if(ortalamaNot<=100 and ortalamaNot>=85):
                harfNotu = 'AA'
                gectimikaldimi = "Gecti"
                print("Harf Notunuz AA. Dersi geçtiniz.")
            elif ortalamaNot>=75 and ortalamaNot<85 :
                print("Harf Notunuz BA. Dersi geçtiniz.")
                harfNotu = 'BA'
                gectimikaldimi = "Gecti"
            elif ortalamaNot >= 70 and ortalamaNot < 75:
                print("Harf Notunuz BB. Dersi geçtiniz.")
                harfNotu = 'BB'
                gectimikaldimi = "Gecti"
            elif ortalamaNot >= 65 and ortalamaNot < 70:
                print("Harf Notunuz CB. Dersi geçtiniz.")
                harfNotu = 'CB'
                gectimikaldimi = "Gecti"
            elif ortalamaNot >= 60 and ortalamaNot < 65:
                print("Harf Notunuz CC. Dersi geçtiniz.")
                harfNotu = 'CC'
                gectimikaldimi = "Gecti"
            elif ortalamaNot >= 55 and ortalamaNot < 60:
                print("Harf Notunuz DC. Dersi koşullu geçtiniz.")
                harfNotu = 'DC'
                gectimikaldimi = "Gecti"
            elif ortalamaNot >= 50 and ortalamaNot < 55:
                print("Harf Notunuz DD. Dersi koşullu geçtiniz.")
                harfNotu = 'DD'
                gectimikaldimi = "Gecti"
            elif ortalamaNot < 50:
                print("Harf notunuz FF kaldınız .")
                harfNotu = 'FF'
                gectimikaldimi = "Kaldi"
        else:
          print("Geçersiz not girdiniz.")


        myFile.writerow([ogrenciadısoyadı, oğrencinumarası, vizeNotu, finalNotu, ortalamaNot, harfNotu, gectimikaldimi])
        
